<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="gitWidgetPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.toyota_cs.radget.entity.*</class>
		<properties>
<!-- 			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" /> -->
<!-- 			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/radget" /> -->
<!-- 			<property name="hibernate.connection.username" value="radget" /> -->
<!-- 			<property name="hibernate.connection.password" value="radget" /> -->
			<property name="show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>